# ---- 1. Import libraries ----
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

%matplotlib inline
pd.set_option("display.max_columns", 50)

# ---- 2. Load datasets ----
# Assuming this notebook is in /notebooks/ folder
claims = pd.read_csv("../data/claims.csv")
providers = pd.read_csv("../data/providers.csv")
patients = pd.read_csv("../data/patients.csv")

print("Data loaded successfully!")
print("Claims shape:", claims.shape)
print("Providers shape:", providers.shape)
print("Patients shape:", patients.shape)

# ---- 3. Preview data ----
print("\n=== Claims Preview ===")
display(claims.head())

print("\n=== Providers Preview ===")
display(providers.head())

print("\n=== Patients Preview ===")
display(patients.head())

# ---- 4. Info ----
print("\n=== Claims info ===")
claims.info()

print("\n=== Providers info ===")
providers.info()

print("\n=== Patients info ===")
patients.info()

# ---- 5. Missing values ----
print("\n=== Missing values in Claims ===")
print(claims.isna().sum())

print("\n=== Missing values in Providers ===")
print(providers.isna().sum())

print("\n=== Missing values in Patients ===")
print(patients.isna().sum())

# ---- 6. Fraud label distribution ----
if "is_fraud" in claims.columns:
    print("\n=== Fraud label distribution (normalized) ===")
    fraud_counts = claims["is_fraud"].value_counts(normalize=True)
    print(fraud_counts)

    plt.figure(figsize=(4,4))
    claims["is_fraud"].value_counts().plot(
        kind="bar",
        title="Fraud vs Non-fraud Count"
    )
    plt.xticks(rotation=0)
    plt.show()
else:
    print("\nWarning: 'is_fraud' not found in claims table.")

# ---- 7. Claim amount distribution ----
plt.figure(figsize=(6,4))
plt.hist(claims["claim_amount"], bins=50)
plt.title("Claim Amount Distribution")
plt.xlabel("claim_amount")
plt.ylabel("Count")
plt.show()

print("\nClaim Amount Statistics:")
display(claims["claim_amount"].describe())

# ---- 8. Diagnosis / Procedure code distribution ----
if "diagnosis_code" in claims.columns:
    print("\n=== Diagnosis Code frequency (Top 10) ===")
    display(claims["diagnosis_code"].value_counts().head(10))

if "procedure_code" in claims.columns:
    print("\n=== Procedure Code frequency (Top 10) ===")
    display(claims["procedure_code"].value_counts().head(10))

# ---- 9. Provider-level fraud rate ----
if "is_fraud" in claims.columns:
    provider_fraud_rate = (
        claims.groupby("provider_id")["is_fraud"]
        .mean()
        .sort_values(ascending=False)
    )

    print("\n=== Top 10 Providers by Fraud Rate ===")
    display(provider_fraud_rate.head(10))

    plt.figure(figsize=(8,4))
    provider_fraud_rate.head(20).plot(kind="bar")
    plt.title("Top 20 Providers by Fraud Rate")
    plt.xlabel("provider_id")
    plt.ylabel("Fraud Rate")
    plt.show()

# ---- 10. Merge claims with providers ----
claims_prov = claims.merge(providers, on="provider_id", how="left")

print("\n=== claims_prov merged table preview ===")
display(claims_prov.head())

print("\nMerged shape:", claims_prov.shape)

# ---- 11. Time series trend ----
if "claim_date" in claims.columns:
    claims["claim_date"] = pd.to_datetime(claims["claim_date"])

    monthly_claims = (
        claims.set_index("claim_date")
        .resample("M")["claim_id"]
        .count()
    )

    plt.figure(figsize=(10,4))
    monthly_claims.plot()
    plt.title("Number of Claims Over Time (Monthly)")
    plt.xlabel("Month")
    plt.ylabel("Claim Count")
    plt.show()
else:
    print("Warning: 'claim_date' column not found.")

# ---- 12. Patient demographic analysis ----
print("\n=== Patient Age Statistics ===")
display(patients["age"].describe())

plt.figure(figsize=(6,4))
plt.hist(patients["age"], bins=30)
plt.title("Patient Age Distribution")
plt.xlabel("Age")
plt.ylabel("Count")
plt.show()

if "gender" in patients.columns:
    print("\n=== Gender distribution ===")
    display(patients["gender"].value_counts())

    patients["gender"].value_counts().plot(
        kind="bar",
        title="Gender Distribution"
    )
    plt.xticks(rotation=0)
    plt.show()

if "insurance_type" in patients.columns:
    print("\n=== Insurance Type distribution ===")
    display(patients["insurance_type"].value_counts())

    patients["insurance_type"].value_counts().plot(
        kind="bar",
        title="Insurance Type Distribution"
    )
    plt.xticks(rotation=45)
    plt.show()

print("\n=== EDA Completed Successfully ===")

